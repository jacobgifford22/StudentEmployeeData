@{
    ViewData["Title"] = "Notifications";
}

@model NotificationViewModel


<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Notification Type</th>
                        <th>EmployeeId</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Notification Type</th>
                        <th>EmployeeId</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var n in Model.Notifications)
                    {
                        @foreach (var i in n.Item)
                        {
                            <tr>
                                <td>@i.Type</td>
                                <td>@i.EmployeeId</td>
                                <td>@i.employee.FirstName</td>
                                <td>@i.employee.LastName</td>
                                <td>
                                    <form method="post" asp-controller="Notifications" asp-action="Delete">
                                        <div class="col-md-auto">
                                            <button type="submit" class="btn btn-outline-danger">Delete</button>

                                            <input type="hidden" asp-for="Notifications" />
                                        </div>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
        </div>
    </div>
</div>
