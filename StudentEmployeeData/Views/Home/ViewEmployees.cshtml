@{
    ViewData["Title"] = "View Employees";
}

@model EmployeesViewModel

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Create">Add Employee</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>EmployeeId</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>Semester</th>
                        <th>Year</th>
                        <th>BYU Id</th>
                        <th>Position Type</th>
                        <th>Class Code</th>
                        <th>Supervisor</th>
                        <th>More Details</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>EmployeeId</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>Semester</th>
                        <th>Year</th>
                        <th>BYU Id</th>
                        <th>Position Type</th>
                        <th>Class Code</th>
                        <th>Supervisor</th>
                        <th>More Details</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var e in Model.Employees)
                    {
                        <tr>
                            <td>@e.EmployeeId</td>
                            <td>@e.FirstName</td>
                            <td>@e.LastName</td>
                            <td>@e.Gender</td>
                            <td>@e.Email</td>
                            <td>@e.Semester</td>
                            <td>@e.Year</td>
                            <td>@e.BYUID</td>
                            <td>@e.PositionType</td>
                            <td>@e.ClassCode</td>
                            <td>@e.Supervisor</td>
                            <td><a class="btn btn-outline-secondary" asp-controller="home" asp-action="EmployeeDetails" 
                                   asp-route-employeeId="@e.EmployeeId">Details</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>